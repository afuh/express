extends layout

block content
  .upload.form
    p.upload__message  Share a new image! 
    form.form__image(action='/api/upload', method='POST', enctype='multipart/form-data')
      label.upload__label(for='photo')
        img.thumb
        .icon-modal__upload  ⬆︎ 
        input.upload-image(type='file' id="photo" name='photo' accept='image/png image/jpeg' required)
      textarea(name='caption', placeholder='Write a caption...', maxlength='140')
      input.button.submit-image(type='submit', value='Share')
